<p id="notice"><%= notice %></p>

<h1>Listing Calendars</h1>
<%= button_to "Generate Carwash Role ", { :controller => "calendars", :action => "generate_carwash"} %>
<table cellspacing="10">
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
    <% if calendar.user_id != nil %>
      <tr>
        <td><%= calendar.date.strftime('%d'+" "+'%b'+" "+'%Y') %></td>
        <td><b>(<%= calendar.user.id %>)</b> <%= calendar.user.name+" "+calendar.user.lastname  %></td>
        <!-- <td><%= link_to 'Show', calendar %></td>
        <td><%= link_to 'Edit', edit_calendar_path(calendar) %>
        </td>
        <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

